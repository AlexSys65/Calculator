<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/keyboard_layout"
                                                   android:background="@android:color/holo_blue_dark"
                                                   android:scrollbarSize="4dp"
                                                   android:scrollbars="vertical">

    <ImageView
        android:id="@+id/textureBackground"
        android:layout_width="737dp"
        android:layout_height="410dp"
        android:foregroundGravity="top"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/leather_967243_640"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4FFF5722"
        android:lineSpacingMultiplier="0.8"
        android:text="@string/valueScreenPreResult"
        android:textAlignment="textEnd"
        android:textColor="@color/colorMemory"
        android:textSize="@dimen/pre_view_text"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/button_memory_plus"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_back"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_1"
        style="@style/number_button"
        android:text="@string/_1"
        app:layout_constraintEnd_toEndOf="@+id/button_4"
        app:layout_constraintStart_toStartOf="@+id/button_4"
        app:layout_constraintTop_toBottomOf="@+id/button_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_2"
        style="@style/number_button"
        android:text="@string/_2"
        app:layout_constraintBottom_toBottomOf="@+id/button_1"
        app:layout_constraintEnd_toEndOf="@+id/button_5"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/button_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_3"
        style="@style/number_button"
        android:text="@string/_3"
        app:layout_constraintBottom_toBottomOf="@+id/button_2"
        app:layout_constraintEnd_toEndOf="@+id/button_6"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/button_6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_4"
        style="@style/number_button"
        android:text="@string/_4"
        app:layout_constraintEnd_toEndOf="@+id/button_7"
        app:layout_constraintStart_toStartOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_5"
        style="@style/number_button"
        android:text="@string/_5"
        app:cornerRadius="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_4"
        app:layout_constraintEnd_toEndOf="@+id/button_8"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toBottomOf="@+id/button_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_6"
        style="@style/number_button"
        android:text="@string/_6"
        app:layout_constraintBottom_toBottomOf="@+id/button_5"
        app:layout_constraintEnd_toEndOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toBottomOf="@+id/button_9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_7"
        style="@style/number_button"
        android:text="@string/_7"
        app:layout_constraintTop_toTopOf="@+id/button_8"
        tools:layout_editor_absoluteX="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_8"
        style="@style/number_button"
        android:layout_marginTop="85dp"
        android:text="@string/_8"
        app:layout_constraintStart_toEndOf="@+id/button_4"
        app:layout_constraintTop_toTopOf="@+id/textureBackground" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_9"
        style="@style/number_button"
        android:text="@string/_9"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toTopOf="@+id/button_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_0"
        style="@style/number_button"
        android:layout_width="0dp"
        android:text="@string/_0"
        app:layout_constraintEnd_toEndOf="@+id/button_2"
        app:layout_constraintStart_toStartOf="@+id/button_1"
        app:layout_constraintTop_toBottomOf="@+id/button_1" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_point"
        android:backgroundTint="@color/colorNumberButton"
        android:text="@string/_point"
        app:layout_constraintBottom_toBottomOf="@+id/button_0"
        app:layout_constraintEnd_toEndOf="@+id/button_3"
        app:layout_constraintStart_toStartOf="@+id/button_3"
        app:layout_constraintTop_toTopOf="@+id/button_0"
        style="@style/number_button"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_plus"
        style="@style/action_button"
        android:text="@string/_plus"
        app:layout_constraintBottom_toBottomOf="@+id/button_6"
        app:layout_constraintEnd_toEndOf="@+id/button_result"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintTop_toTopOf="@+id/button_6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_minus"
        style="@style/action_button"
        android:text="@string/_minus"
        app:layout_constraintBottom_toBottomOf="@+id/button_9"
        app:layout_constraintEnd_toEndOf="@+id/button_plus"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintTop_toTopOf="@+id/button_9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_multiply"
        style="@style/action_button"
        android:layout_width="wrap_content"
        android:text="@string/_multiply"
        app:layout_constraintBottom_toTopOf="@+id/button_9"
        app:layout_constraintStart_toEndOf="@+id/button_split"
        app:layout_constraintTop_toTopOf="@+id/button_split" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_split"
        style="@style/action_button"
        android:text="@string/_split"
        app:layout_constraintBottom_toTopOf="@+id/button_7"
        app:layout_constraintStart_toEndOf="@+id/button_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_result"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorTopButton"
        android:text="@string/_result"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="@+id/button_point"
        app:layout_constraintStart_toEndOf="@+id/button_point"
        app:layout_constraintTop_toTopOf="@+id/button_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_back"
        style="@style/action_button"
        android:text="@string/_back"
        app:layout_constraintBottom_toTopOf="@+id/button_minus"
        app:layout_constraintEnd_toEndOf="@+id/button_minus"
        app:layout_constraintStart_toStartOf="@+id/button_minus" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_cancel"
        style="@style/cancel_style"
        android:text="@string/_cancel"
        app:layout_constraintBottom_toTopOf="@+id/button_7"
        app:layout_constraintStart_toStartOf="@+id/button_7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_memory_clear"
        style="@style/mem_button"
        android:text="@string/memoryClear"
        app:layout_constraintStart_toEndOf="@+id/button_plus"
        app:layout_constraintTop_toTopOf="@+id/button_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_memory_plus"
        style="@style/mem_button"
        android:text="@string/memoryPlus"
        app:layout_constraintBottom_toTopOf="@+id/button_generate_password"
        app:layout_constraintStart_toEndOf="@+id/button_memory_read"
        app:layout_constraintTop_toTopOf="@+id/button_memory_read" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_memory_minus"
        style="@style/mem_button"
        android:text="@string/memoryMinus"
        app:layout_constraintBottom_toBottomOf="@+id/button_memory_plus"
        app:layout_constraintStart_toEndOf="@+id/button_memory_plus"
        app:layout_constraintTop_toTopOf="@+id/button_memory_plus" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_memory_read"
        style="@style/mem_button"
        android:text="@string/memoryRead"
        app:layout_constraintBottom_toBottomOf="@+id/button_memory_clear"
        app:layout_constraintStart_toEndOf="@+id/button_memory_clear"
        app:layout_constraintTop_toTopOf="@+id/button_memory_clear" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_percent"
        style="@style/top_button"
        android:text="@string/percent"
        app:layout_constraintBottom_toBottomOf="@+id/button_result"
        app:layout_constraintStart_toEndOf="@+id/button_result"
        app:layout_constraintTop_toBottomOf="@+id/button_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_generate_password"
        style="@style/top_button"
        android:text="@string/genPassword"
        app:layout_constraintBottom_toBottomOf="@+id/button_percent"
        app:layout_constraintStart_toEndOf="@+id/button_percent"
        app:layout_constraintTop_toBottomOf="@+id/button_memory_clear" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_square"
        style="@style/top_button"
        android:text="@string/square"
        app:layout_constraintBottom_toBottomOf="@+id/button_sqrt"
        app:layout_constraintEnd_toEndOf="@+id/button_memory_minus"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_memory_minus"
        app:layout_constraintTop_toBottomOf="@+id/button_memory_plus"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sqrt"
        style="@style/top_button"
        android:text="@string/sqrt"
        app:cornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_generate_password"
        app:layout_constraintStart_toEndOf="@+id/button_generate_password"
        app:layout_constraintTop_toBottomOf="@+id/button_memory_read" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="#4FFF5722"
        android:lineSpacingMultiplier="0.8"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/valueScreen"
        android:textAlignment="textEnd"
        android:textColor="@color/colorScreen"
        android:textSize="@dimen/view_text"
        android:textStyle="italic"

        app:layout_constraintBottom_toTopOf="@+id/button_9"
        app:layout_constraintEnd_toEndOf="@+id/button_memory_minus"
        app:layout_constraintStart_toEndOf="@+id/button_back"
        app:layout_constraintTop_toTopOf="@+id/button_back" />

</androidx.constraintlayout.widget.ConstraintLayout>