<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="number_button">
        <item name="android:backgroundTint">@color/colorNumberButton</item>
        <item name="android:textColor">@color/colorTopButton</item>
    </style>
    <style name="number_button_two" parent = "number_button">
        <item name="android:backgroundTint">@color/colorAction</item>
        <item name="android:textColor">@color/colorTopButton</item>
    </style>

    <style name="action_button" parent="number_button">
        <item name="android:backgroundTint">@color/colorButtonAct</item>
        <item name="android:textColor">@color/colorAction</item>
    </style>
    <style name="action_button_two" parent="number_button">
        <item name="android:backgroundTint">@color/colorAction_two</item>
        <item name="android:textColor">@color/colorScreen</item>
    </style>

    <style name="mem_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_between_buttons</item>
        <item name="android:backgroundTint">@color/colorMemory</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="cancel_style" parent="mem_button">
        <item name="android:backgroundTint">@color/colorButCancel</item>
    </style>

    <style name="top_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding_between_buttons</item>
        <item name="android:backgroundTint">@color/colorTopButton</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>
</resources>